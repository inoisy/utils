sudo apt update
sudo apt install nginx


upstream frontend {
  server localhost:8080;
}

upstream backend {
  server localhost:1337;
}


server {
  if ($host = prodaem-kolbasu.ru) {
      return 301 https://$host$request_uri;
  } # managed by Certbot
  if ($host = www.azb-es.ru) {
      return 301 https://prodaem-kolbasu.ru$request_uri;
  } # managed by Certbot

  listen 80;
  listen [::]:80;
  server_name www.prodaem-kolbasu.ru prodaem-kolbasu.ru;
  #return 404; # managed by Certbot
  rewrite ^ https://$server_name$request_uri? permanent;

}

server {
	server_name www.prodaem-kolbasu.ru prodaem-kolbasu.ru;
  if ($host = www.prodaem-kolbasu.ru) {
     return 301 https://prodaem-kolbasu.ru$request_uri;
  }

  #	proxy_pass http://front
  #	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	location / {
		proxy_set_header   Host            $http_host;
		proxy_set_header   X-Real-IP       $remote_addr;
		proxy_set_header   X-NginX-Proxy   true;
		proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_http_version 1.1;
		proxy_redirect     off;
		proxy_buffering    off;
		gzip on;
		gzip_comp_level 5;
		gzip_disable "msie6";
		gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
		gzip_proxied    expired no-cache no-store private auth;
		
		proxy_pass         http://frontend;
		
	}

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/prodaem-kolbasu.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/prodaem-kolbasu.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
	server_name api.prodaem-kolbasu.ru;
  client_max_body_size 54m;	
  # root /home/sam/hydroservice24/backend/admin/admin/build/;
	location / {
    proxy_buffering off;
    proxy_set_header   Host            $http_host;
    proxy_set_header   Upgrade         $http_upgrade;
    proxy_set_header   Connection      "upgrade";
    proxy_set_header   X-Real-IP       $remote_addr;
    proxy_set_header   X-NginX-Proxy   true;
    proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_http_version 1.1;
    proxy_redirect     off;
	  gzip on;
    gzip_comp_level 5;
    gzip_disable "msie6";
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
    proxy_pass         http://backend;
  }
}

server {
  if ($host = api.prodaem-kolbasu.ru) {
      return 301 https://$host$request_uri;
  } # managed by Certbot


	listen 80;
	server_name api.prodaem-kolbasu.ru;
  #return 404; # managed by Certbot
  rewrite ^ https://$server_name$request_uri? permanent;

}

server {
  if ($host = cdn.prodaem-kolbasu.ru) {
      return 301 https://$host$request_uri;
  } # managed by Certbot


  listen 80;
  server_name cdn.prodaem-kolbasu.ru;
  #    return 404; # managed by Certbot
  rewrite ^ https://$server_name$request_uri? permanent;

}
























